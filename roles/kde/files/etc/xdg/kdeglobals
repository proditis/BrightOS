[KDE Action Restrictions][$i]
# We don't want the SNL user to log out accidentally
action/lock_screen=false
action/switch_user=false
action/start_new_session=false
#logout=false

# Prevent aribtrary command execution
shell_access=false
run_command=false

# Prevent modification of desktop
movable_toolbars=false
action/options_show_toolbar=false
plasma/plasmashell/unlockedDesktop=false

# Control desktop styling
widgetStyle=breeze
